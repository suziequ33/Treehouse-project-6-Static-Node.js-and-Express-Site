extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box

        h1= project.project_name

        p= project.description

      .project-tech-links-box.box
        h6 Technologies
        ul

          each tech in project.technologies
            li= tech

        a.btn-link(href=project.live_link) Live Demo
        a.btn-link(href=project.github_link) GitHub Repo

    .project-img-box.box
      img.project-img(src=`/static/${project.image_urls[0]}`, alt=`Thumbnail for ${project.project_name}`, width="550", height="550")
      
    nav.nav
      a(href='/')
        span &larr;
        |  Back
