extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box

        //- Use the info in your data file and the comments below to complete this template

        //- Use interpolation to dynamically add the project title
        h1= projects.project_name

        //- Use interpolation to dynamically add the project description
        p= projects.description

      .project-tech-links-box.box
        h6 Technologies
        ul

          //- Use an `each` iterator and interpolation to dynamically replace the li tags below with the technologies listed for this project
          li HTML
          li CSS
          li JavaScript

        //- Add the href values to the links below
        a.btn-link(href=projects.live_link) Live Demo
        a.btn-link(href=projects.github_link) GitHub Repo

    .project-img-box.box

      //- Replace the URLs in the src attributes below with interpolated template literals to dynamically add your project images, and add descriptions to the alt attributes
      img.project-img(src=`/static/${projects.image_urls[0]}`, alt=`Thumbnail for ${projects.project_name}`)
      img.project-img(src=`/static/${projects.image_urls[1]}`, alt=`Thumbnail for ${projects.project_name}`)
      img.project-img(src=`/static/${projects.image_urls[2]}`, alt=`Thumbnail for ${projects.project_name}`)
      img.project-img(src=`/static/${projects.image_urls[3]}`, alt=`Thumbnail for ${projects.project_name}`)

    nav.nav
      a(href='/')
        span &larr;
        |  Back
